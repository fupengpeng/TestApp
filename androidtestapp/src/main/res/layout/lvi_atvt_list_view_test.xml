<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="224.5dp"
        android:orientation="vertical">
        <!--排序时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_lv_item_service_order_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@drawable/task_no_bg_1"
                android:textSize="@dimen/order_main_body_text_size"
                android:gravity="center"
                android:text="5" />

            <TextView
                android:id="@+id/tv_lv_item_service_order_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/order_main_body_text_size"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text=" " />

            <TextView
                android:id="@+id/tv_lv_item_service_order_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:textSize="@dimen/order_main_body_text_size"
                android:layout_marginRight="5dp"
                android:text="时间" />
        </LinearLayout>
        <!--客户内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#eeeeee"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_lv_item_service_order_user_pic"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:padding="15dp"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_lv_item_service_order_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:gravity="center|left"
                    android:textSize="@dimen/order_subheading_text_size"
                    android:text="散客" />

                <TextView
                    android:id="@+id/tv_lv_item_service_order_user_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="@dimen/order_main_body_text_size"
                    android:layout_weight="0.8"
                    android:gravity="center|left"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lv_item_service_order_turn_member"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_lv_item_service_order_dial"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    />

                <TextView
                    android:id="@+id/tv_lv_item_service_order_dial"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="@dimen/order_main_body_text_size"
                    android:layout_weight="0.3"
                     />
            </LinearLayout>
        </LinearLayout>
        <!--间隔-->
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />
        <!--服务项目-->
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/tv_lv_item_service_order_item_name"
                android:text="项目名"
                android:gravity="center|left"
                android:layout_weight="0.3"
                android:textSize="@dimen/order_main_body_text_size"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_lv_item_service_order_waiter_name"
                android:gravity="center"
                android:text="用户名"
                android:textSize="@dimen/order_main_body_text_size"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_lv_item_service_order_service_status"
                android:gravity="center"
                android:text="服务状态"
                android:textSize="@dimen/order_main_body_text_size"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_lv_item_service_order_service_time"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="服务时长"
                android:textSize="@dimen/order_main_body_text_size"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>
        <View
            android:background="#aaaaaa"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <!--查看详情-->
        <LinearLayout
            android:id="@+id/ll_lv_item_service_order_particulars"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <TextView
                android:text="查看详情"
                android:gravity="center"
                android:textSize="@dimen/order_subheading_text_size"
                android:background="@drawable/border_view_details_"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:layout_width="90dp"
                android:layout_height="30dp" />
            <View
                android:background="#eeeeee"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>