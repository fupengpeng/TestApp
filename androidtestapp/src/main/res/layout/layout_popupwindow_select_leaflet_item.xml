<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/ll_layout_pw_content"
        android:orientation="horizontal"
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <CheckBox
            android:id="@+id/cb_layout_pw_check_all"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_40"
            style="@style/circlecheckbox"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_gravity="center"
            android:text="请选择要传递的项目"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ListView
        android:id="@+id/lv_layout_pw_item"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>
    <!--导航栏-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:id="@+id/ll_layout_pw_transfer_item_dismiss_pw"
            android:background="#000000"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_weight="0.35"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/transmit_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:text="传递项目"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_layout_pw_affirm_leaflet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:background="#00ff55"
            android:gravity="center"
            android:text="确认转单"
            android:textColor="#ffffff"
            android:textSize="@dimen/order_title_text_size" />
    </LinearLayout>

</LinearLayout>