<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/v_layout_pw_dismiss"
        android:background="#99000000"
        android:layout_width="100dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--公共标题栏-->
        <LinearLayout
            android:id="@+id/title_activity_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="43dp"
            android:background="@color/leftMenuWorkNameTextColor"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5">
            <!--左侧图片-->
            <ImageView
                android:id="@+id/iv_layout_pw_left"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:src="@drawable/ic_chevron_left_black_24dp" />
            <!--标题-->
            <TextView
                android:id="@+id/tv_layout_pw_title"
                android:text="筛选"
                android:textSize="@dimen/order_title_text_size"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ffffff" />
            <!--右侧图片-->
            <ImageView
                android:id="@+id/iv_layout_pw_right"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:text="客户姓名："
                        android:layout_gravity="center"
                        android:textSize="@dimen/order_main_body_text_size"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/et_layout_pw_client_name"
                        android:maxLength="4"
                        android:hint="请输入客户姓名"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textSize="@dimen/order_main_body_text_size"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                <View
                    android:background="@color/cut_off_rule"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:text="联系电话："
                        android:textSize="@dimen/order_main_body_text_size"
                        android:layout_gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/et_layout_pw_client_phone_number"
                        android:layout_gravity="center"
                        android:maxLength="11"
                        android:inputType="phone"
                        android:background="@null"
                        android:textSize="@dimen/order_main_body_text_size"
                        android:hint="请输入客户手机号"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/cut_off_rule"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:text="门        店："
                        android:layout_gravity="center"
                        android:textSize="@dimen/order_main_body_text_size"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_layout_pw_shop_name"
                        android:text="白宫"
                        android:layout_gravity="center"
                        android:textSize="@dimen/order_main_body_text_size"
                        android:layout_weight="0.1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
  <!--                  <Spinner
                        android:id="@+id/spinner_layout_pw_shop_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:prompt="@string/shop_name"
                        android:spinnerMode="dialog" />-->


                </LinearLayout>
                <View
                    android:background="@color/cut_off_rule"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:text="店        员："
                        android:layout_gravity="center"
                        android:textSize="@dimen/order_main_body_text_size"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_layout_pw_waiter_name"
                        android:text="张三李四"
                        android:layout_gravity="center"
                        android:textSize="@dimen/order_main_body_text_size"
                        android:layout_weight="0.1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/cut_off_rule"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:text="来        源："
                        android:layout_gravity="center"
                        android:textSize="@dimen/order_main_body_text_size"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_layout_pw_source"
                        android:text="线上预约"
                        android:layout_gravity="center"
                        android:textSize="@dimen/order_main_body_text_size"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:background="@color/cut_off_rule"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">


                    <Button
                        android:id="@+id/btn_layout_pw_query"
                        android:text="查询"
                        android:textColor="@color/white"
                        android:layout_margin="5dp"
                        android:background="@color/leftMenuWorkNameTextColor"
                        android:gravity="center"
                        android:textSize="@dimen/order_main_body_text_size"
                        android:layout_weight="0.1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <View
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>



</LinearLayout>